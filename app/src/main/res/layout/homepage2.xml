<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232222">

    <GridLayout
        android:id="@+id/view"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:backgroundTint="#3e3f40"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#8000ff"
            android:progressTint="#8000ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:text="Calories"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="82dp"
            android:layout_marginTop="150dp"
            android:text="2000"
            android:textColor="#fff"
            android:textSize="28dp" />


        <FrameLayout
            android:id="@+id/card1"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#30ffffff">

            <TextView
                android:id="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Exercise"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="87dp"
                android:layout_marginTop="5dp"
                android:background="55000000"
                android:cursorVisible="false"
                android:text="+"
                android:textSize="15dp"
                app:cornerRadius="5dp" />

            <TextView
                android:id="@+id/textView10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="45dp"
                android:drawableStart="@drawable/fire"
                android:text=" 200kca"
                android:textColor="#fff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="79dp"
                android:drawableStart="@drawable/clock"
                android:text="  20min"
                android:textColor="#fff"
                android:textSize="15dp" />



        </FrameLayout>

        <FrameLayout
            android:id="@+id/card2"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:layout_marginStart="-135dp"
            android:layout_marginTop="150dp"
            android:background="#30ffffff">

            <TextView
                android:id="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Steps"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView8"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="45dp"
                android:text="0"
                android:drawableStart="@drawable/runnig_shoe"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@android:style/Widget.ProgressBar.Horizontal"                android:layout_width="125dp"
                android:layout_height="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="5dp"
                android:progressDrawable="@drawable/my_progressbar" />
                />
        </FrameLayout>




    </GridLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="0dp"
                android:text="Meals"
                android:textColor="#fff"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@+id/card3"
                app:layout_constraintStart_toStartOf="parent">

            </TextView>

            <TextView
                android:id="@+id/card3"
                android:layout_width="250dp"
                android:layout_height="230dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="-160dp"
                android:background="#30ffffff"
                android:text="500g sunca + 300 cal"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView9" />

            <Button
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="-160dp"
                android:layout_marginTop="300dp"
                android:backgroundTint="#8000ff"
                android:text="+"
                android:textColor="#fff"
                android:textSize="27dp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/card3" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="270dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginTop="0dp"
                android:text="Exercises"
                android:textColor="#fff"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@+id/card4"
                app:layout_constraintEnd_toEndOf="parent">

            </TextView>

            <TextView
                android:id="@+id/card4"
                android:layout_width="250dp"
                android:layout_height="230dp"
                android:layout_marginStart="-140dp"
                android:layout_marginTop="30dp"
                android:background="#30ffffff"
                android:text="alergat o ora + sah 30 min"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView12" />

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="-160dp"
                android:layout_marginTop="300dp"
                android:backgroundTint="#8000ff"
                android:text="+"
                android:textColor="#fff"
                android:textSize="27dp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/card4" />

        </LinearLayout>


    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>