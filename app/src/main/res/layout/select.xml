<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="70dp"
        android:gravity="center_horizontal"
        android:text="Select"
        android:textColor="#8000ff"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/alimente"
        android:layout_width="225dp"
        android:layout_height="90dp"
        android:layout_below="@+id/select"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-500dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#8000ff"
        android:text="Alimente" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pozaalim"
        android:src="@drawable/alimente" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/munca"
        android:layout_width="229dp"
        android:layout_height="93dp"
        android:layout_below="@+id/alimente"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#8000ff"
        android:text="Exercitii" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pozamunca"
        android:src="@drawable/munca"
        android:layout_marginTop="300dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_below="@+id/munca"
        android:layout_marginStart="290dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#8000ff"
        android:text="Back" />


</RelativeLayout>